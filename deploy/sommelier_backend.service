[Unit]
Description=Sommelier Backend (Flask API with Gunicorn)
After=network.target

[Service]
Type=simple
WorkingDirectory=/srv/sommelier_backend
ExecStart=/srv/sommelier_backend/venv/bin/gunicorn -w 4 -b 0.0.0.0:5000 app:app
Restart=always
RestartSec=5
Environment=FLASK_ENV=production
Environment=PORT=5000
Environment=CHROMADB_DISABLE_TELEMETRY=1
Environment=CHROMADB_PATH=./chroma_db
Environment=OPENAI_API_KEY=
Environment=HEYGEN_API_KEY=
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
